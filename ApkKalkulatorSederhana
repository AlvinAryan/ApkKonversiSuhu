    private void TambahButtonActionPerformed(java.awt.event.ActionEvent evt) {                                             
        double a = Double.parseDouble(AngkaField1.getText());
        double b = Double.parseDouble(AngkaField2.getText());
        double hasil = a + b;
        HasilField.setText(hasil + "");
        
        String nama = TambahButton.getText().toString().trim();
        LabelRumus.setText(" + ");
        
    }                                            

    private void HapusButtonActionPerformed(java.awt.event.ActionEvent evt) {                                            
        AngkaField1.      setText("");
        AngkaField2.      setText("");
        HasilField.      setText("");
        AngkaField1.requestFocus();
    }                                           

    private void KeluarButtonActionPerformed(java.awt.event.ActionEvent evt) {                                             
        this.dispose();
    }                                            

    private void AngkaField2ActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
    }                                           

    private void KaliFieldActionPerformed(java.awt.event.ActionEvent evt) {                                          
        double a = Double.parseDouble(AngkaField1.getText());
        double b = Double.parseDouble(AngkaField2.getText());
        double hasil = a * b;
        HasilField.setText(hasil + "");
        
        String nama = TambahButton.getText().toString().trim();
        LabelRumus.setText(" X ");
    }                                         

    private void KurangFieldActionPerformed(java.awt.event.ActionEvent evt) {                                            
        double a = Double.parseDouble(AngkaField1.getText());
        double b = Double.parseDouble(AngkaField2.getText());
        double hasil = a - b;
        HasilField.setText(hasil + "");
        
        String nama = TambahButton.getText().toString().trim();
        LabelRumus.setText(" - ");
    }                                           

    private void BagiFieldActionPerformed(java.awt.event.ActionEvent evt) {                                          
        double a = Double.parseDouble(AngkaField1.getText());
        double b = Double.parseDouble(AngkaField2.getText());
        double hasil = a / b;
        HasilField.setText(hasil + "");
        
        String nama = TambahButton.getText().toString().trim();
        LabelRumus.setText(" : ");
    }                                         

