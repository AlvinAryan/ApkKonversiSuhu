    private void BulanComboBoxActionPerformed(java.awt.event.ActionEvent evt) {                                              
        // TODO add your handling code here:
    }                                             

    private void SimpanButtonActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
        
        try{
            try(BufferedWriter out = new BufferedWriter(new FileWriter("Jumlah hari.txt"))){
                out.write(JumlahLabel.getText());
                JOptionPane.showMessageDialog(null, "Berhasil disimpan dalam File");
            }
        }catch(IOException|HeadlessException e){
            System.err.println("Error : " + e.getMessage());
        }
    }                                            

    private void HitungButtonActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
        if(TahunField.getText().isEmpty()){
            JOptionPane.showMessageDialog(null, "Error : Isian Tahun Kosong!",
                    "Error : Isian Tahun Kosong!", JOptionPane.WARNING_MESSAGE);
        }else{
            int tahun = Integer.parseInt(TahunField.getText());
            int jumlahHari;
            if(BulanComboBox.getSelectedItem().equals("February")){
                if(((tahun % 4 == 0) &&! (tahun % 100 == 0))||(tahun % 400 == 0))
                    jumlahHari = 29;
                else jumlahHari = 28; 
            }else if ( BulanComboBox.getSelectedItem().equals("April")||
                       BulanComboBox.getSelectedItem().equals("Juny")||
                       BulanComboBox.getSelectedItem().equals("September")||
                       BulanComboBox.getSelectedItem().equals("November")){
                jumlahHari = 30;
        }else {
                jumlahHari = 31;
            }
            JumlahLabel.setText("Jumlah Hari Pada Bulan " + BulanComboBox.getSelectedItem()
            + " Tahun " + tahun + " adalah " + jumlahHari);
            
        }
        
    }                                            

    private void HapusButtonActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        JumlahLabel.setText("Jumlah HarI adalah");
        TahunField.setText("");
        BulanComboBox.setSelectedItem("January");
    }                                           

    private void ExitButtonActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        System.exit(0);
    }                                          

    private void TahunFieldKeyTyped(java.awt.event.KeyEvent evt) {                                    
        // TODO add your handling code here:
        char c =evt.getKeyChar();
        if (!((Character.isDigit(c)||(c== KeyEvent.VK_BACK_SPACE)||(c == KeyEvent.VK_DELETE))
                )){
            getToolkit().beep();
            JOptionPane.showMessageDialog(null,"Masukan hanya bilangan angka !");
         
            evt.consume();
        }
            
    }                                   

